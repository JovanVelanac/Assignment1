pipeline {
  agent { docker { image 'golang:alpine'} }
  stages {
    stage('Build') {
      environment {
        XDG_CACHE_HOME = '/tmp/.cache'
      }
      steps {
        sh 'go build -o Assignment1'
      }
    }
    stage ('Save artifact') {
      steps {
        archiveArtifacts 'Assignment1'
      }
    }
  }
}
